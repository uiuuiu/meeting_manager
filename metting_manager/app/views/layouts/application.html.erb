<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">
  <title>meeting room</title>

  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
    <%= javascript_include_tag "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js", "https://oss.maxcdn.com/respond/1.4.2/respond.min.js" %>
  <![endif]-->

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <ul class="navbar-brand">
          <%= link_to "HOME", root_path%>
          </ul>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
          <ul class="navbar-text pull-right">
            <% if user_signed_in? %>
                <li style="color: white">Logged in as <strong><%= current_user.email %></strong>.</li>
                <li><%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %></li> 
                <li><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
              <% else %>
                <li><%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %></li>
                <li><%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %></li>
            <% end %>
          </ul>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
</nav>
<div class="code">
<!--toan bo !-->
<div class="container" style="width:100%;height:100%;padding-left: 10px;border: 1px solid; border-color: green; width: 100%" >
<!--khung ben phai !-->
    <div class="col-md-2" style="padding-top: 5px;">
      <% if current_user!=nil %>
      <!-- avatar -->
        <div class="picture" >

        <div style="padding-left:-10px">
          <%= link_to user_profile_path(current_user, current_user.profile)do %>
            <img src="<%= current_user.profile.picture %>" class="img-circle" style=" width:150px;height:200px;">
          <% end %>
        </div>

        <div style="margin-left: -25px;padding-left: 25%;color: blue;border-bottom: 2px solid;border-color: green;width: 225px">
          name: <%=current_user.profile.name%><br>
          level: <%=current_user.profile.level%>
        </div>

        </div>
      <!-- end avatar -->

      <!-- group -->
      <div id='group_drop' style="margin-left: -25px;border-bottom: 2px solid;border-color: green;width: 225px">
        <% @group = Group.where(user_id: current_user.id) %>
          <li class="mnav-ul-li" style="display: inline-block">
            <%= button_tag "my group",:style => "width: 190px",:class => "btn btn-info btn-sm"%>
            <ul class='mnav-ul-ul'>
              <% if @group!=nil&&@group.size>0 %>
                <% @group.each do |f| %>
                  <li>
                  <%=link_to "#{f.name}",user_group_path(current_user, f)%>
                  <%= link_to "choice" %>
                  </li>
                <%end%>
              <%end%>
           </ul>
          </li>
          <div style="display: inline-block"><%= link_to '+', new_user_group_path(current_user),:class => "btn btn-info btn-sm",:style => "width:30px;display: inline-block;" %></div>
      <script>
        $("#group_drop")
        .on('click', '.mnav-ul-li', function(){
        $(this).parent().find('ul:first > li').slideToggle();
        $(this).parent().find('ul:first > li').css({ 
            "display": "block",
            "width": "200px", 
           });
        });    
      </script>
      </div>
      <!-- end group -->

      <!-- attend-group -->
        <div id='atten_group_drop' style="margin-left: -25px;border-bottom: 2px solid;border-color: green;width: 225px">
        <% @at_group = Group.where(user_id: current_user.id) %>
          <li class="mnav-ul-li">
            <%= button_tag "atten group",:style => "width: 225px",:class => "btn btn-info btn-sm"%>
            <ul class='mnav-ul-ul'>
              <% if @at_group!=nil&&@at_group.size>0 %>
                <% @at_group.each do |f| %>
                  <li>
                  <%=link_to "#{f.name}",user_group_path(current_user, f)%>
                  <%= link_to "choice" %>
                  </li>
                <%end%>
              <%end%>
           </ul>
          </li>
      <script>
        $("#atten_group_drop")
        .on('click', '.mnav-ul-li', function(){
        $(this).parent().find('ul:first > li').slideToggle();
        $(this).parent().find('ul:first > li').css({ 
            "display": "block",
            "width": "200px", 
           });
        });    
      </script>
      </div>

        <div>abc
        
        </div>

    </div>
    <%end%>
    <!-- khung ben trai -->
    <div class="col-md-10"  style="border-left: 5px solid;min-height: 600px; border-color: green; height:100%;">
      <%= yield %>
    </div>
     
</div><!-- /.container -->
</div> <!--code!-->
</body>
</html>